{
  "name": "noroff-fed-sp2",
  "version": "0.6.0",
  "description": "Semester Project 2 for Noroff FED",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --cache --fix",
    "format": "prettier --write .",
    "build": "tailwindcss -i ./input.css -o ./css/style.css",
    "watch": "tailwindcss -i ./input.css -o ./css/style.css --watch",
    "start": "live-server",
    "dev": "npm-run-all --parallel watch start",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ttowntom/noroff-fed-sp2.git"
  },
  "keywords": [
    "noroff",
    "fed",
    "sp2",
    "js",
    "tailwind"
  ],
  "author": "Torgeir Helgesen Riseth <torris51469@stud.noroff.no>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ttowntom/noroff-fed-sp2/issues"
  },
  "homepage": "https://github.com/ttowntom/noroff-fed-sp2#readme",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10"
  },
  "lint-staged": {
    "*.mjs": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "marked": "^14.1.0"
  }
}
